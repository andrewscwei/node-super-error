{
  "name": "@andrewscwei/super-error",
  "version": "1.0.0",
  "description": "Custom error for Node.js with additional properties",
  "main": "build/index.js",
  "scripts": {
    "clean": "rimraf build",
    "build": "npm run clean && tsc",
    "test": "npm run build -- --project tsconfig.test.json && mocha --timeout 30000 --reporter spec --full-trace --colors --recursive --bail --exit $([ -z \"$npm_config_files\" ] && echo \"build/**/*.spec.js\" || echo \"build/$npm_config_files\")",
    "test:ts": "mocha -r ts-node/register --timeout 30000 --reporter spec --full-trace --colors --recursive --bail --exit $([ -z \"$npm_config_files\" ] && echo \"src/**/*.spec.ts\" || echo \"src/$npm_config_files\")",
    "lint": "eslint --ext .ts src",
    "lint:fix": "npm run lint -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrewscwei/node-super-error.git"
  },
  "keywords": [
    "node",
    "super",
    "error"
  ],
  "author": "Andrew Wei <andrewscwei@gmail.com>",
  "license": "MIT",
  "files": [
    "build"
  ],
  "bugs": {
    "url": "https://github.com/andrewscwei/node-super-error/issues"
  },
  "homepage": "https://github.com/andrewscwei/node-super-error#readme",
  "types": "build/index.d.ts",
  "devDependencies": {
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.10",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.3.0",
    "mocha": "^9.1.3",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "serialize-error": "^8.1.0"
  }
}
