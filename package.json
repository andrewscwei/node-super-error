{
  "name": "@andrewscwei/super-error",
  "version": "2.0.0",
  "description": "Custom error for Node.js with additional properties",
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "clean": "rimraf build",
    "prebuild": "npm run lint",
    "build": "npm run clean && tsc",
    "build:test": "npm run build -- --project tsconfig.test.json",
    "test": "mocha -b -c --timeout 30000 --extension spec.js --recursive --exit \"build/$npm_config_files\"",
    "test:ts": "mocha -r ts-node/register -n experimental-specifier-resolution=node -n loader=ts-node/esm -b -c --timeout 30000 --extension spec.ts --recursive --exit \"src/$npm_config_files\"",
    "lint": "eslint --ext .ts src",
    "lint:fix": "npm run lint -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrewscwei/node-super-error.git"
  },
  "keywords": [
    "node",
    "super",
    "error"
  ],
  "author": "Andrew Wei <andrewscwei@gmail.com>",
  "license": "MIT",
  "files": [
    "build"
  ],
  "bugs": {
    "url": "https://github.com/andrewscwei/node-super-error/issues"
  },
  "homepage": "https://github.com/andrewscwei/node-super-error#readme",
  "types": "build/index.d.ts",
  "devDependencies": {
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.6.5",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "eslint": "^8.21.0",
    "mocha": "^10.0.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "is-plain-obj": "^4.1.0",
    "serialize-error": "^11.0.0"
  }
}
